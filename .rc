#!/usr/bin/env bash

# export vars
export DEVKIT_HOME=$(sourcedir "$BASH_SOURCE")
export DEVKIT_BIN="${DEVKIT_HOME}/bin"
export DEVKIT_LIB="${DEVKIT_HOME}/lib"
export DEVKIT_THIRDPARTY="${DEVKIT_HOME}/third_party"
export DEVKIT_MODULE="${DEVKIT_HOME}/module"
export DEVKIT_CONFIG="$DEVKIT_HOME/config"

[ -f "$DEVKIT_HOME/.environment" ] && environment=$(<$DEVKIT_HOME/.environment)
export DEVKIT_CONFIG_FILE="$DEVKIT_CONFIG/config${environment:+-$environment}.json"
